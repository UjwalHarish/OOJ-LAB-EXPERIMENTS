import java.util.*;

class Account
{
  String name;
  String accno;
  String type;

  Account(String name,String accno,String type)
  {
    this.name=name;
    this.accno=accno;
    this.type=type;
  }
}

  
class CurrAccount extends Account
{
  double balance;
  double withdrawal;
  int pen=0;

  CurrAccount(String name,String accno,String type,double balance)
  {
    this.balance=balance;
    super(name,accno,type);
    if(balance<2000.0)
    {
      System.out.println("Insufficient Balance");
      pen=pen+3000;
    }
  }

  void updateDeposit(double deposit)
  {
    balance=balance+deposit;
    if(pen!=0 && balance>3000.0)
    {
      balance=balance-pen;
    }
  }

  void updateWithdrawal(double withdrawal)
  {
    if(balance<2000.0 && (balance-withdrawal)<2000.0)
    {
       System.out.println("Insufficient Funds");
    }
    else
      balance=balance-withdrawal;
  }

  void displayBalance()
  {
    System.out.println("Your Balance is "+balance);
  }
}
  

}

class SavAccount extends Account
{
  double balance;
  double deposit;
  double withdrawal;
  double intamt;

  SavAccount(String name,String accno,String type,double balance)
  {
    super(name,accno,type);
    this.balance=balance;
  }
  
  void newDeposit(double deposit)
  {
    this.deposit=deposit;
    balance=balance+deposit;
  }

  void newWithdrawal(double withdrawal)
  {
    this.withdrawal=withdrawal;
    if((balance-withdrawal)<0)
      System.out.println("Insufficient Funds");
    else
      balance=balance-withdrawal;
  }

  void interest(double p,double r,double t,double n)
  {
    intamt=p*(Math.pow((1+r/n),nt);
    System.out.println("Your interest amount is "+intamt);
  }

  void displayBalance()
  {
    System.out.println("Your Balance is "+balance);
  }
}   

